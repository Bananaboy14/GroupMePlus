{
  "manifest_version": 3,

  "name": "GroupMe Plus",
  "description": "All‑in‑one extension to make GroupMe web actually usable.",
  "version": "1.1.1",

  "icons": {
    "48":  "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://web.groupme.com/*",
    "https://api.groupme.com/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;"
  },

  "content_scripts": [
    {
      "matches": ["https://web.groupme.com/*"],
      "run_at":  "document_start",
      "js":      [
        "lz-string.min.js",
        "styles.js",
        "groupme-plus.js"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["sidebar.css", "page-inject.js"],
      "matches":   ["https://web.groupme.com/*"]
    }
  ]
}
